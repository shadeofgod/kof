{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext","dom"],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.test.tsx"]
}